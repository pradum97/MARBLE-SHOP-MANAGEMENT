<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shop.management.Controller.ViewSizeAndPrice">
    <center>
        <TableView fx:id="tableView" focusTraversable="false" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
            <columns>

                <TableColumn fx:id="colSize" editable="false" minWidth="170.0" prefWidth="-1.0" sortable="false" text="SIZE" />
                <TableColumn fx:id="colPurchasePrice" editable="false" prefWidth="120.0" sortable="false" text="PURCHASE PRICE" />
                <TableColumn fx:id="colMrp" editable="false" sortable="false" text="MRP" />
                <TableColumn fx:id="colMinSellPrice" editable="false" sortable="false" text="MIN-SELL" />
                <TableColumn fx:id="colQuantity" editable="false" prefWidth="100.0" sortable="false" text="QUANTITY" />
                <TableColumn fx:id="colAction" editable="false" prefWidth="130.0" sortable="false" text="ACTION" />

            </columns>
        </TableView>
    </center>
   <top>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#bnAddNewSize" style="-fx-cursor: hand;-fx-background-color: #008080; -fx-text-fill: WHITE;" text="âž• ADD NEW SIZE">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="8.0" right="8.0" top="5.0" />
               </padding>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>

</BorderPane>

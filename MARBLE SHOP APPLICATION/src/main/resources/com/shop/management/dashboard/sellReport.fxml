<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shop.management.Controller.SellReport">
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>

                                <TableView focusTraversable="false" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
                                    <columns>

                                        <TableColumn fx:id="col_sno" prefWidth="75.0" text="S.NO" />
                                        <TableColumn fx:id="c_name" prefWidth="100.0" text="C-NAME" />
                                        <TableColumn fx:id="c_phone" prefWidth="85.0" text="C-PHONE" />
                                        <TableColumn fx:id="c_address" prefWidth="150.0" text="C-ADDRESS" />
                                        <TableColumn fx:id="saleID" editable="false" prefWidth="60.0" sortable="false" text="ID" />
                                        <TableColumn fx:id="saleIMG" editable="false" prefWidth="75.0" sortable="false" text="IMG" />
                                        <TableColumn fx:id="saleColor" editable="false" prefWidth="100.0" sortable="false" text="COLOR" />
                                        <TableColumn fx:id="productName" editable="false" prefWidth="200.0" sortable="false" text="P-NAME" />
                                        <TableColumn fx:id="purchasePrice" editable="false" prefWidth="150" sortable="false" text="PURCHASE PRICE" />
                                        <TableColumn fx:id="mrp" editable="false" prefWidth="81" sortable="false" text="MRP" />
                                        <TableColumn fx:id="sellPrice" editable="false" prefWidth="81" sortable="false" text="SELL-PRICE" />
                                        <TableColumn fx:id="productType" editable="false" prefWidth="100.0" sortable="false" text="TYPE" />
                                        <TableColumn fx:id="productCategory" editable="false" prefWidth="100.0" sortable="false" text="CATEGORY" />
                                        <TableColumn fx:id="productQuantity" editable="false" prefWidth="90.0" sortable="false" text="QUANTITY" />
                                        <TableColumn fx:id="productUnit" editable="false" prefWidth="90.0" sortable="false" text="UNIT" />
                                        <TableColumn fx:id="amount" editable="false" prefWidth="90.0" sortable="false" text="AMOUNT" />
                                        <TableColumn fx:id="netAmount" editable="false" prefWidth="90.0" sortable="false" text="NET-AMOUNT" />
                                        <TableColumn fx:id="productDiscount" editable="false" prefWidth="100" sortable="false" text="DISCOUNT" />
                                        <TableColumn fx:id="productSize" editable="false" prefWidth="100.0" sortable="false" text="SIZE" />
                                        <TableColumn fx:id="col_p_seller_name" prefWidth="120.0" text="SELLER NAME" />
                                        <TableColumn fx:id="col_p_date" prefWidth="200.0" text="DATE" />
                                        <TableColumn fx:id="col_notes" prefWidth="200.0" text="Notes" />
                                        <TableColumn fx:id="action" editable="false" prefWidth="200.0" sortable="false" text="ACTION" />

                                    </columns>
                                </TableView>

                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children></StackPane>
    </center>
   <top>
       <HBox alignment="CENTER_RIGHT" spacing="50.0">
           <children>

               <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                   <children>

                       <Label text="STOCK REPORT">
                           <font>
                               <Font name="Agency FB" size="21.0" />
                           </font>
                       </Label>
                   </children>
               </HBox>
               <HBox alignment="CENTER_RIGHT">
                   <children>
                       <Label style="-fx-text-fill: black; -fx-font-size: 16;" text="View Limit : " />
                       <ComboBox />
                   </children>
                   <HBox.margin>
                       <Insets right="20.0" />
                   </HBox.margin>
               </HBox>
           </children>
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
       </HBox>
   </top>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="420.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SellItems.CustomerDetails">
   <center>
      <StackPane fx:id="mainContainer" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" StackPane.alignment="CENTER">
               <StackPane.margin>
                  <Insets bottom="20.0" />
               </StackPane.margin>
               <children>
                  <VBox fillWidth="false" spacing="10.0">
                     <VBox alignment="CENTER" spacing="20.0">
                        <children>
                           <VBox alignment="CENTER_LEFT" spacing="5.0">
                              <Label style="-fx-font-size: 15; -fx-text-fill: black;" text="Phone ( 10-Digit ) : " />
                              <HBox spacing="1.0">
                                 <children>
                                    <TextField editable="false" focusTraversable="false" maxWidth="40.0" minWidth="40.0" prefHeight="40.0" prefWidth="15.0" style="-fx-border-radius: 3; -fx-border-color: gray;" text="+91" />
                                    <TextField fx:id="c_phone" focusTraversable="false" prefHeight="40.0" prefWidth="535.0" promptText="Enter Customer Phone" style="-fx-border-radius: 3; -fx-border-color: gray;" />
                                 </children>
                              </HBox>
                           </VBox>
                           <Button fx:id="bnCheckOut" maxHeight="31.0" mnemonicParsing="false" onAction="#bnCheckOut" prefHeight="25.0" prefWidth="120.0" style="-fx-cursor: hand;-fx-background-color: BLUE; -fx-text-fill: WHITE; -fx-font-size: 13; -fx-font-weight: bold;" text="CHECKOUT" />
                           <Label fx:id="messageL" visible="false" />
                        </children>
                     </VBox>
                     <VBox fx:id="detailsContainer" spacing="10.0">
                        <children>
                           <VBox alignment="CENTER_LEFT" spacing="5.0">
                              <Label style="-fx-font-size: 15; -fx-text-fill: black;" text="Name : " />
                              <TextField fx:id="c_name" focusTraversable="false" prefHeight="40.0" prefWidth="550.0" promptText="Enter Customer Name  " style="-fx-border-radius: 3; -fx-border-color: gray;" />
                           </VBox>
                           <VBox alignment="CENTER_LEFT" spacing="5.0">
                              <Label style="-fx-font-size: 15; -fx-text-fill: black;" text="Address : " />
                              <TextField fx:id="c_address" focusTraversable="false" prefHeight="60.0" prefWidth="540.0" promptText="Enter Customer Address " style="-fx-border-radius: 3; -fx-border-color: gray;" />
                           </VBox>



                           <HBox alignment="CENTER" fillHeight="false" prefWidth="600.0" spacing="50.0">
                              <children>
                                 <Button maxHeight="31.0" mnemonicParsing="false" onAction="#cancel_Bn" prefHeight="25.0" prefWidth="120.0" style="-fx-cursor: hand;-fx-background-color: RED; -fx-text-fill: WHITE; -fx-font-size: 13; -fx-font-weight: bold;" text="CANCEL" />
                                 <Button fx:id="submit_bn" layoutX="229.0" layoutY="24.0" maxHeight="31.0" mnemonicParsing="false" onAction="#submit_bn" prefHeight="25.0" prefWidth="120.0" style="-fx-cursor: hand;-fx-background-color: BLUE; -fx-text-fill: WHITE; -fx-font-size: 13; -fx-font-weight: bold;" text="SUBMIT" />
                              </children>
                              <VBox.margin>
                                 <Insets top="30.0" />
                              </VBox.margin>
                           </HBox>
                        </children>
                     </VBox>
                  </VBox>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </StackPane>
   </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SellItems.SelectSize">
    <children>
        <TableView fx:id="tableView" focusTraversable="false" minWidth="-Infinity" tableMenuButtonVisible="true" HBox.hgrow="ALWAYS">
            <columns>

                <TableColumn fx:id="colSize" editable="false" minWidth="130.0" sortable="false" text="SIZE" />
                <TableColumn fx:id="colPurchasePrice" editable="false" minWidth="90.0" sortable="false" text="PUR PRICE" />
                <TableColumn fx:id="colMrp" editable="false" minWidth="90.0" sortable="false" text="MRP" />
                <TableColumn fx:id="colMinSellPrice" editable="false" minWidth="90.0" sortable="false" text="MIN-SELL" />
                <TableColumn fx:id="colQuantity" editable="false" minWidth="100.0" sortable="false" text="QUANTITY" />
                <TableColumn fx:id="colAction" editable="false" minWidth="130.0" sortable="false" text="ACTION" />

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</HBox>

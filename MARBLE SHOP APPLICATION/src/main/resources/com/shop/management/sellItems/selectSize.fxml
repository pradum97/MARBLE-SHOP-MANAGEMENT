<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SellItems.SelectSize">
   <center>
      <HBox>
          <children>
              <TableView fx:id="tableView" focusTraversable="false" minWidth="-Infinity" tableMenuButtonVisible="true" HBox.hgrow="ALWAYS">
                  <columns>
      
                      <TableColumn fx:id="colSize" editable="false" minWidth="130.0" sortable="false" text="SIZE" />
                      <TableColumn fx:id="colPurchasePrice" editable="false" minWidth="90.0" sortable="false" text="PUR PRICE" />
                      <TableColumn fx:id="colMrp" editable="false" minWidth="90.0" sortable="false" text="MRP" />
                      <TableColumn fx:id="colMinSellPrice" editable="false" minWidth="90.0" sortable="false" text="MIN-SELL" />
                      <TableColumn fx:id="colQuantity" editable="false" minWidth="170.0" sortable="false" text="QUANTITY" />
                      <TableColumn fx:id="colAction" editable="false" minWidth="130.0" sortable="false" text="ACTION" />
      
                  </columns>
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
              </TableView>
          </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#cancel" prefHeight="26.0" prefWidth="104.0" style="-fx-background-color: RED; -fx-text-fill: WHITE; -fx-background-radius: 2; -fx-cursor: hand;" text="CENCEL" textAlignment="JUSTIFY">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>

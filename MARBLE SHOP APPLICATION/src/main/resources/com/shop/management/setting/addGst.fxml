<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SettingController.AddGst">

    <VBox alignment="CENTER" fillWidth="false" prefWidth="302.0" spacing="30.0"  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
                <children>
                    <VBox fillWidth="false">
                        <children>
                            <Label text="SGST :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="sgstTF" minHeight="36.0" minWidth="140.0" prefHeight="36.0" prefWidth="140.0" promptText="Enter SGST" />
                        </children>
                    </VBox>
                    <VBox fillWidth="false" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="CGST :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="cgstTF" minHeight="36.0" minWidth="140.0" prefHeight="36.0" prefWidth="140.0" promptText="Enter CGST" />
                        </children>
                    </VBox>
                </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
                <children>
                    <VBox fillWidth="false">
                        <children>
                            <Label text="IGST :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="igstTF" minHeight="36.0" minWidth="140.0" prefHeight="36.0" prefWidth="140.0" promptText="Enter IGST" />
                        </children>
                    </VBox>
                    <VBox fillWidth="false" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="GST NAME :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="gstNameTF" minHeight="36.0" minWidth="140.0" prefHeight="36.0" prefWidth="140.0" promptText="Enter GST NAME" />
                        </children>
                    </VBox>
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="105.0" spacing="10.0">
                <children>
                    <VBox fillWidth="false">
                        <children>
                            <Label text="DESCRIPTION ( optional ) :  ">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="descriptionTF" minHeight="50.0" minWidth="140.0" prefHeight="50.0" prefWidth="290.0" promptText="Enter Description" />
                        </children>
                    </VBox>
                </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER">
                <children>
                    <Button mnemonicParsing="false" onAction="#addTax" prefHeight="26.0" prefWidth="90.0" style="-fx-cursor: hand;-fx-background-color: #008080; -fx-text-fill: WHITE;" text="SUBMIT" />
                </children>
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </HBox>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.AllProducts">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
      
            <TableView fx:id="tableView" focusTraversable="false" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
              <columns>

                  <TableColumn fx:id="colSrNo" editable="false" minWidth="-Infinity" sortable="false" text="SrNo" />
                  <TableColumn fx:id="colProductName" editable="false" minWidth="200.0" prefWidth="200.0" sortable="false" text="PROD-NAME" />
                  <TableColumn fx:id="colType" editable="false" minWidth="115.0" prefWidth="115.0" sortable="false" text="PROD-TYPE" />
                  <TableColumn fx:id="colCategory" editable="false" minWidth="120.0" prefWidth="120.0" sortable="false" text="CATEGORY" />
                  <TableColumn fx:id="colColor" editable="false" prefWidth="120.0" sortable="false" text="COLOR" />
                  <TableColumn fx:id="colSize" editable="false" maxWidth="-1.0" minWidth="170.0" prefWidth="-1.0" sortable="false" text="SIZE ( H x W )" />
                  <TableColumn fx:id="colPrice" editable="false" minWidth="-Infinity" sortable="false" text="PRICE" />
      
                  <TableColumn fx:id="colHsnSan" editable="false" minWidth="-Infinity" sortable="false" text="HSN/SAC" />
                  <TableColumn fx:id="colTax" editable="false" sortable="false" text="TAX %" />
                  <TableColumn fx:id="colDiscount" editable="false" sortable="false" text="DISCOUNT %" />
                  <TableColumn fx:id="colAction" editable="false" minWidth="150" prefWidth="150.0" sortable="false" text="ACTION" />
                  <TableColumn fx:id="colDate" editable="false" minWidth="-Infinity" sortable="false" text="DATE" />
                  <TableColumn fx:id="colDescription" editable="false" prefWidth="150.0" sortable="false" text="DESCRIPTION" />
      
              </columns>
            </TableView>
         </children>
      </VBox>

   </center>

    <bottom>
        <HBox alignment="CENTER" fillHeight="false" spacing="23.0" style="-fx-background-color: white;">
            <children>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox HBox.hgrow="ALWAYS">
                            <children>
                                <Pagination visible="false" fx:id="pagination" maxPageIndicatorCount="0" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_RIGHT" maxHeight="43.0" minHeight="35.0" minWidth="-Infinity" prefHeight="35.0" prefWidth="280.0" spacing="10.0" style="-fx-border-color: transparent transparent white transparent; -fx-background-color: #008080; -fx-background-radius: 5;">
                            <children>
                                <ImageView cache="true" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../img/icon/search_icon.png" />
                                    <effect>
                                        <Blend />
                                    </effect>
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </ImageView>
                                <TextField fx:id="searchTf" promptText="FIND PRODUCT.. " style="-fx-background-color: transparent; -fx-text-inner-color: white;" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Bookman Old Style" size="12.0" />
                           </font></TextField>
                            </children>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </HBox>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </HBox>

                <HBox alignment="CENTER" fillHeight="false">

                    <HBox fx:id="refresh_bn" alignment="CENTER" fillHeight="false" minHeight="35.0" onMouseClicked="#bnRefresh" prefHeight="38.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: RED; -fx-background-radius: 3;">

                        <ImageView fx:id="refresh_img" fitHeight="15.0" fitWidth="15.0" onMouseClicked="#bnRefresh">
                            <Image url="@../img/icon/refresh_ic.png" />
                            <HBox.margin>
                                <Insets left="7.0" right="7.0" />
                            </HBox.margin>
                        </ImageView>
                    </HBox>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>

                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label lineSpacing="1.0" text="ALL PRODUCTS" textAlignment="CENTER">
               <font>
                  <Font name="Bookman Old Style" size="17.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="8.0" top="5.0" />
         </padding>
      </HBox>
   </top>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../css/cartTable.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.Cart">
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <HBox>
                    <children>
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">

                            <TableView fx:id="cartTableView" focusTraversable="false" style="-fx-control-inner-background: #ffffff;" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                <columns>

                                    <TableColumn fx:id="colSrNo" editable="false" minWidth="-Infinity" sortable="false" text="SrNo" />
                                    <TableColumn fx:id="colProduct_name" editable="false" prefWidth="200.0" sortable="false" text="PRODUCT NAME" />
                                    <TableColumn fx:id="colSize" editable="false" minWidth="-Infinity" prefWidth="200.0" sortable="false" text="SIZE" />
                                    <TableColumn fx:id="colPurchasePrice" editable="false" minWidth="-Infinity" sortable="false" text="PUR PRICE" />
                                    <TableColumn fx:id="colMrp" editable="false" minWidth="-Infinity" sortable="false" text="MRP" />
                                    <TableColumn fx:id="colSellPrice" editable="false" minWidth="-Infinity" prefWidth="100.0" sortable="false" text="SELLING PRICE" />
                                    <TableColumn fx:id="colQuantity" editable="false" minWidth="-Infinity" sortable="false" text="QUANTITY" />
                                    <TableColumn fx:id="colType" editable="false" minWidth="-Infinity" sortable="false" text="TYPE" />
                                    <TableColumn fx:id="colDiscount" editable="false" minWidth="-Infinity" sortable="false" text="DISCOUNT %" />
                                    <TableColumn fx:id="colGst" editable="false" minWidth="-Infinity" sortable="false" text="GST %" />
                                    <TableColumn fx:id="colAction" editable="false" minWidth="-Infinity" sortable="false" text="ACTION" />

                                </columns>
                                <VBox.margin>
                                    <Insets />
                                </VBox.margin>
                            </TableView>
                     <HBox alignment="CENTER_RIGHT" fillHeight="false">
                        <children>
      
                                  <HBox alignment="CENTER" fillHeight="false" spacing="60.0" HBox.hgrow="ALWAYS">
      
                                      <Button alignment="CENTER" onAction="#clear" prefHeight="26.0" prefWidth="109.0" style="-fx-cursor: hand;-fx-background-color: RED; -fx-text-fill: WHITE; -fx-font-weight: BOLD;" text="CLEAR ALL" textAlignment="CENTER" />
   
                               <HBox alignment="CENTER" fillHeight="false">
                                   <children>
                                       <VBox fillWidth="false" spacing="5.0">
                                           <children>
                                               <Label text="Choose Billing  Type :" textAlignment="CENTER">
                                                   <font>
                                                       <Font size="14.0" />
                                                   </font>
                                                   <VBox.margin>
                                                       <Insets left="5.0" />
                                                   </VBox.margin>
                                               </Label>
                                               <ComboBox fx:id="billingTypeC" prefHeight="40.0" prefWidth="200.0" />
                                           </children>
                                       </VBox>
                                   </children>
                               </HBox>
                                      <Button alignment="CENTER" onAction="#sellNow_bn" prefHeight="26.0" prefWidth="109.0" style="-fx-cursor: hand;-fx-background-color: BLUE; -fx-text-fill: WHITE; -fx-font-weight: BOLD;" text="SELL NOW" textAlignment="CENTER" />
      
                                  </HBox>
                                    <VBox spacing="5.0">
                                        <children>
                                 <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                                    <children>
                                                  <HBox alignment="CENTER_LEFT">
                                                      <children>
                                                          <Label text="Amount     :  ₹" />
                                                          <Label fx:id="priceL" layoutX="10.0" layoutY="10.0">
                                                              <HBox.margin>
                                                                  <Insets left="4.0" />
                                                              </HBox.margin>
                                                          </Label>
                                                      </children>
                                                  </HBox>
                                                  <HBox alignment="CENTER_LEFT" fillHeight="false">
                                                      <children>
                                                          <Label text="DISCOUNT : ₹" />
                                                          <Label fx:id="discountL" layoutX="10.0" layoutY="10.0">
                                                              <HBox.margin>
                                                                  <Insets left="4.0" />
                                                              </HBox.margin>
                                                              <font>
                                                                  <Font size="14.0" />
                                                              </font>
                                                          </Label>
                                                      </children>
                                                  </HBox>
                                                  <HBox alignment="CENTER_LEFT">
                                                      <children>
                                                          <Label text="TAX            :  ₹" />
                                                          <Label fx:id="taxL" layoutX="10.0" layoutY="10.0">
                                                              <HBox.margin>
                                                                  <Insets left="4.0" />
                                                              </HBox.margin>
                                                              <font>
                                                                  <Font size="14.0" />
                                                              </font>
                                                          </Label>
                                                      </children>
                                                  </HBox>
                                    </children>
                                    <VBox.margin>
                                       <Insets left="15.0" />
                                    </VBox.margin>
                                 </VBox>


                                 <Separator prefWidth="220.0" />
                                            <HBox alignment="CENTER" layoutX="20.0" layoutY="81.0">
                                                <children>
                                                    <Label fx:id="totalPayAbleL" alignment="CENTER" layoutX="10.0" layoutY="10.0" minWidth="180.0" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                        <HBox.margin>
                                                            <Insets left="4.0" />
                                                        </HBox.margin>
                                                        <font>
                                                            <Font name="System Bold" size="14.0" />
                                                        </font>
                                                    </Label>
                                                </children>
                                    <padding>
                                       <Insets left="10.0" />
                                    </padding>
                                            </HBox>
                                        </children>
                                        <padding>
                                            <Insets top="5.0" />
                                        </padding>
                              <HBox.margin>
                                 <Insets bottom="10.0" />
                              </HBox.margin>
                                    </VBox>
                        </children>
                     </HBox>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>

                        </VBox>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </center>
</BorderPane>

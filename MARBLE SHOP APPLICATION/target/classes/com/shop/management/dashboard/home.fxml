<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.Home">
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>

                                <TableView fx:id="tableViewHome" focusTraversable="false" styleClass="table-view-home" tableMenuButtonVisible="true" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="col_sno" editable="false" prefWidth="75.0" sortable="false" text="Sr.No" />
                                        <TableColumn fx:id="colProductName" editable="false" minWidth="200" sortable="false" text=" P-NAME " />
                                        <TableColumn fx:id="colCategory" editable="false" minWidth="-Infinity" sortable="false" text="CATEGORY" />
                                        <TableColumn fx:id="colProductType" editable="false" minWidth="-Infinity" sortable="false" text="TYPE" />
                                        <TableColumn fx:id="colProductSize" editable="false" minWidth="-Infinity" sortable="false" text="   SIZE   " />
                                        <TableColumn fx:id="colPurchasePrice" editable="false" minWidth="-Infinity" prefWidth="130.0" sortable="false" text="  PUR PRICE  " />
                                        <TableColumn fx:id="colMrp" editable="false" minWidth="-Infinity" sortable="false" text="   MRP   " />
                                        <TableColumn fx:id="colSellPrice" editable="false" minWidth="-Infinity" sortable="false" text="   RATE   " />
                                        <TableColumn fx:id="colProductQuantity" editable="false" minWidth="-Infinity" sortable="false" text="  QUANTITY  " />
                                        <TableColumn fx:id="colProductDiscount" editable="false" minWidth="-Infinity" prefWidth="120.0" sortable="false" text="  DIS AMOUNT  " />
                                        <TableColumn fx:id="colGst" editable="false" minWidth="-Infinity" prefWidth="110.0" sortable="false" text=" TAX AMOUNT  " />
                                        <TableColumn fx:id="colNetAmount" editable="false" minWidth="-Infinity" prefWidth="120.0" sortable="false" text="  NET-AMOUNT  " />
                                        <TableColumn fx:id="colBilType" editable="false" minWidth="-Infinity" sortable="false" text="  Bil Type  " visible="false" />

                                    </columns>
                                </TableView>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

    <top>
        <VBox>
            <children>

                <HBox alignment="CENTER" spacing="5.0" style="-fx-background-color: white;">
                    <children>

                        <Label text="TODAY'S  SALES  REPORT">
                            <font>
                                <Font name="Bookman Old Style" size="21.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER" fillHeight="false" spacing="20.0" style="-fx-background-color: white;">
                    <children>
                        <HBox alignment="CENTER" maxWidth="200.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian,rgb(0.0, 0.0, 0.15), 4.0, 0.4, 0.0,1.5);     -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 8;" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label alignment="CENTER" prefWidth="90.0" style="-fx-alignment: center;" text="TOTAL ITEM" textAlignment="CENTER" wrapText="true">
                                            <font>
                                                <Font name="Arial Black" size="12.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="totalSaleItemL" />
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>

                        <HBox alignment="CENTER" maxWidth="200.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian,rgb(0.0, 0.0, 0.15), 4.0, 0.4, 0.0,1.5);     -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 8;" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label alignment="CENTER" style="-fx-text-fill: blue;" text="TOTAL NET AMOUNT" wrapText="true">
                                            <font>
                                                <Font name="Arial Black" size="12.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="totalSaleAmountL" style="-fx-text-fill: blue;" />
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>

                        <HBox alignment="CENTER" layoutX="1080.0" layoutY="60.0" maxWidth="200.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian,rgb(0.0, 0.0, 0.15), 4.0, 0.4, 0.0,1.5);     -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 8;" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label alignment="CENTER" style="-fx-text-fill: green;" text="TODAY PROFIT" wrapText="true">
                                            <font>
                                                <Font name="Arial Black" size="12.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="totalProfitL" style="-fx-text-fill: green;" />
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <bottom>
        <HBox alignment="CENTER" fillHeight="false" spacing="23.0" style="-fx-background-color: white;">
            <children>
                <HBox HBox.hgrow="ALWAYS">
                    <children>
                        <Pagination visible="false" fx:id="pagination" maxPageIndicatorCount="0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <children>

                        <HBox alignment="CENTER_RIGHT" minHeight="40.0" prefHeight="38.0" prefWidth="280.0" spacing="10.0" style="-fx-border-color: transparent transparent white transparent; -fx-background-color: #008080; -fx-background-radius: 5;">
                            <children>
                                <ImageView cache="true" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../img/icon/search_icon.png" />
                                    <effect>
                                        <Blend />
                                    </effect>
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </ImageView>
                                <TextField fx:id="searchTf" promptText="FIND PRODUCT.. " style="-fx-background-color: transparent; -fx-text-inner-color: white;" HBox.hgrow="ALWAYS" />
                            </children>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </HBox>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </HBox>

                <HBox alignment="CENTER" fillHeight="false">

                    <HBox fx:id="refresh_bn" alignment="CENTER" fillHeight="false" minHeight="35.0" onMouseClicked="#bnRefresh" prefHeight="38.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: RED; -fx-background-radius: 3;">

                        <ImageView fx:id="refresh_img" fitHeight="15.0" fitWidth="15.0" onMouseClicked="#bnRefresh">
                            <Image url="@../img/icon/refresh_ic.png" />
                            <HBox.margin>
                                <Insets left="7.0" right="7.0" />
                            </HBox.margin>
                        </ImageView>
                        <HBox.margin>
                            <Insets right="40.0" />
                        </HBox.margin>
                    </HBox>

                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>

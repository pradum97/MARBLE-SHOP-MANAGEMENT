<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="550.0" style="-fx-background-color: WHITE; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.AddSize">

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <VBox minWidth="155.0" prefWidth="155.0" spacing="5.0">
                        <children>
                            <Label text="PURCHASE PRICE :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="purchasePrice" minHeight="40.0" prefHeight="40.0" promptText="Enter purchase price" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                        </children>
                    </VBox>
                    <VBox minWidth="155.0" prefWidth="155.0" spacing="5.0">
                        <children>
                            <Label text="MRP :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="productMrp" minHeight="40.0" onKeyReleased="#enterPress" prefHeight="40.0" promptText="Enter MRP" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                        </children>
                    </VBox>
                    <VBox minWidth="155.0" prefWidth="155.0" spacing="5.0">
                        <children>
                            <Label text="MIN SELLING PRICE :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="minSellPrice" minHeight="40.0" onKeyReleased="#enterPress" prefHeight="40.0" promptText="Enter Min Selling Price" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                        </children>
                    </VBox>
                </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" spacing="10.0">
                <children>
                    <VBox layoutX="10.0" layoutY="10.0" spacing="5.0">
                        <children>
                            <Label text="HEIGHT :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="productHeight" minHeight="40.0" minWidth="185.0" onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="185.0" promptText="Enter Height : " style="-fx-border-color: gray; -fx-border-radius: 3;" text="234" />
                        </children>
                    </VBox>
                    <VBox layoutX="10.0" layoutY="10.0" spacing="5.0">
                        <children>
                            <Label text="WIDTH :">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="productWidth" minHeight="40.0" minWidth="185.0" onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="1.0" promptText="Enter Width :" style="-fx-border-color: gray; -fx-border-radius: 3;" text="234" />
                        </children>
                    </VBox>
                    <VBox layoutX="271.0" layoutY="10.0" spacing="5.0">
                        <children>
                            <Label text="UNIT">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <ComboBox fx:id="productSizeUnit" minHeight="40.0" minWidth="92.0" prefWidth="92.0" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                        </children>
                    </VBox>
                </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" spacing="25.0">
                <children>
                    <HBox spacing="25.0">
                        <children>
                            <VBox spacing="5.0">
                                <children>
                                    <Label text="QUANTITY :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="productQuantity" minHeight="40.0" minWidth="188.0" onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="285.0" promptText="Enter Quantity :" style="-fx-border-color: gray; -fx-border-radius: 3;" text="50" />
                                </children>
                            </VBox>
                            <VBox spacing="5.0">
                                <children>
                                    <Label>
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                    <ComboBox fx:id="productQuantityUnit" minHeight="40.0" minWidth="100.0" onKeyReleased="#enterPress" prefWidth="170.0" style="-fx-border-color: gray; -fx-border-radius: 3;" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="70.0" prefWidth="200.0">
                <children>
                    <Button fx:id="bnAddSize" alignment="CENTER" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#bnAddSize" onKeyReleased="#enterPress" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: BLUE; -fx-text-fill: WHITE; -fx-cursor: hand;" text="ADD" textAlignment="CENTER" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>


</AnchorPane>

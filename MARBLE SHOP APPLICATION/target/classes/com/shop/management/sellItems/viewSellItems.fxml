<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefWidth="1000" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SellItems.ViewSellItems">
   <center>
      <TableView fx:id="saleTableView" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="col_sno" prefWidth="75.0" text="Sr.No" />
            <TableColumn fx:id="colProductName" editable="false"  prefWidth="200" sortable="false" text="PRODUCT NAME" />
            <TableColumn fx:id="colColor" editable="false"  minWidth="-Infinity" sortable="false" text="COLOR" />
            <TableColumn fx:id="colSize" editable="false" minWidth="-Infinity" sortable="false" text="SIZE" />
            <TableColumn fx:id="colProductType" editable="false"  minWidth="-Infinity" sortable="false" text="TYPE" />
            <TableColumn fx:id="colCategory" editable="false"  minWidth="-Infinity" sortable="false" text="CATEGORY" />
            <TableColumn fx:id="colPurchasePrice" editable="false"  minWidth="-Infinity" sortable="false" text="PUR PRICE" />
            <TableColumn fx:id="colMrp" editable="false" minWidth="-Infinity" sortable="false" text="MRP" />
            <TableColumn fx:id="colRate" editable="false"  minWidth="-Infinity" sortable="false" text="RATE" />
            <TableColumn fx:id="colQuantity" editable="false"  minWidth="-Infinity" sortable="false" text="QUANTITY" />
            <TableColumn fx:id="colDiscName" editable="false" prefWidth="170" sortable="false" text="DISC NAME" />
            <TableColumn fx:id="colDiscount" editable="false"  minWidth="-Infinity" sortable="false" text="DISC AMOUNT" />
            <TableColumn fx:id="colHsnSac" editable="false"  minWidth="-Infinity" sortable="false" text="HSN/SAC" />
            <TableColumn fx:id="colTax" editable="false"  minWidth="-Infinity" sortable="false" text="TAX %" />
            <TableColumn fx:id="colTaxAmount" editable="false"  minWidth="-Infinity" sortable="false" text="TAX AMOUNT" />
            <TableColumn fx:id="colNetAmount" editable="false" minWidth="-Infinity" sortable="false" text="NET AMOUNT" />
            <TableColumn fx:id="colDate" minWidth="-Infinity" editable="false" sortable="false" text="DATE" />
        </columns>
      </TableView>
   </center>
    <bottom>
        <HBox alignment="CENTER" fillHeight="false" spacing="23.0" style="-fx-background-color: white;">
            <children>
                <HBox HBox.hgrow="ALWAYS">
                    <children>
                        <Pagination fx:id="pagination" visible="false" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>

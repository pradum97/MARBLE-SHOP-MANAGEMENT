<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shop.management.Controller.ReturnItems.ViewReturnItem">
    <center>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colSrNo" minWidth="70.0"  text="srNo"/>
                                <TableColumn fx:id="colProductName" minWidth="150.0" prefWidth="-1.0"
                                             text="PRODUCT NAME"/>
                                <TableColumn fx:id="colProductSize" minWidth="150.0"  text="SIZE"/>
                                <TableColumn fx:id="colReturnQuantity" minWidth="150.0" prefWidth="-1.0"
                                             text="RETURN QUANTITY"/>
                                <TableColumn fx:id="rate" minWidth="150.0" text="RATE"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>

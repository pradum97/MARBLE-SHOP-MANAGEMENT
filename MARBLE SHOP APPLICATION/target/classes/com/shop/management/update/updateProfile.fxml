<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" fillWidth="false" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.Update.UpdateProfile">

    <StackPane style="-fx-background-color: #ffffff; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">

        <VBox alignment="CENTER" fillWidth="false" spacing="20">

            <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;">


                <GridPane alignment="TOP_CENTER" style="-fx-background-color: #ffffff">

                    <VBox spacing="40" VBox.vgrow="ALWAYS">

                        <VBox alignment="CENTER" prefWidth="516.0" spacing="14">

                            <HBox alignment="CENTER" spacing="15">

                                <VBox spacing="4">
                                    <Label text="First Name :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Label>
                                    <TextField fx:id="first_name_f" maxHeight="131.0" prefHeight="40.0" prefWidth="300.0" promptText="Enter First Name" />

                                </VBox>

                                <VBox spacing="4">

                                    <Label style="-fx-start-margin: 10" text="Last Name :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Label>
                                    <TextField fx:id="last_name_f" maxHeight="80.0" prefHeight="40.0" prefWidth="300.0" promptText="Enter Last Name" />

                                </VBox>
                            </HBox>
                            <HBox alignment="CENTER" spacing="15">

                                <VBox spacing="4">
                                    <Label text="Username :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Label>
                                    <TextField fx:id="username_f" maxHeight="375.0" prefHeight="40.0" prefWidth="300.0" promptText="Enter username" />

                                </VBox>

                                <VBox spacing="4">
                                    <Label text="Phone Number :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="phone_f" layoutX="45.0" layoutY="27.0" maxHeight="80.0" prefHeight="40.0" prefWidth="300.0" promptText="Enter 10-Digit Phone Number" />

                                </VBox>

                            </HBox>

                            <HBox alignment="CENTER" spacing="15">

                                <VBox>
                                    <Label text="Email  :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Label>
                                    <TextField fx:id="email_f" maxHeight="70.0" prefHeight="40.0" prefWidth="616" promptText="Enter Valid Email" />

                                </VBox>
                            </HBox>

                            <HBox alignment="CENTER" spacing="15">

                                <VBox prefHeight="36" spacing="4">
                                    <Label text="Gender :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Label>
                                    <ComboBox fx:id="gender_comboBox" prefHeight="40.0" prefWidth="300.0" promptText="Select Gender" />

                                </VBox>

                                <VBox spacing="4">
                                    <Label text="Role :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Label>
                                    <ComboBox fx:id="role_combobox" prefHeight="40.0" prefWidth="300.0" promptText="Select Role" />

                                </VBox>
                        <VBox layoutX="276.0" layoutY="10.0" spacing="4">
                           <children>
                              <Label text="Account Status">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="combo_accountStatus" prefHeight="40.0" prefWidth="300.0" />
                           </children>
                        </VBox>

                            </HBox>

                            <HBox alignment="CENTER">
                                <VBox spacing="4">
                                    <Label text="Full Address :">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Label>
                                    <TextArea fx:id="full_address_f" maxHeight="80.0" prefHeight="80.0" prefWidth="616.0" promptText="Enter Full Address" style="-fx-text-alignment: CENTER">
                              <padding>
                                 <Insets right="3.0" />
                              </padding></TextArea>

                                </VBox>
                            </HBox>


                            <VBox alignment="CENTER" spacing="10.0">

                                <ImageView fx:id="profile_photo" fitHeight="80.0" fitWidth="80.0" layoutY="140.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../img/icon/person_ic.png" />
                                </ImageView>

                                <Button fx:id="profile_img_choose" onAction="#chooseAvatar" style="-fx-cursor: hand;-fx-background-color: #5e0cee;" text="UPDATE AVATAR" textFill="white">
                                    <padding>
                                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                                    </padding></Button>

                            </VBox>

                        </VBox>


                        <HBox alignment="CENTER" prefWidth="516.0" spacing="30">

                            <Button fx:id="bnCancel" alignment="CENTER" lineSpacing="1.0" onAction="#update_bn" prefHeight="30.0" prefWidth="218.0" style="-fx-cursor: hand;-fx-background-color: #5e0cee;" text="CANCEL" textAlignment="CENTER" textFill="#ffffff" />

                            <Button fx:id="bnUpdate" alignment="CENTER" lineSpacing="1.0" onAction="#update_bn" prefHeight="30.0" prefWidth="218.0" style="-fx-cursor: hand;-fx-background-color: #5e0cee;" text="UPDATE" textAlignment="CENTER" textFill="#ffffff" />


                        </HBox>
                        <padding>
                            <Insets bottom="20.0" left="30.0" right="30.0" />
                        </padding>

                    </VBox>

                    <columnConstraints>
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>

                </GridPane>

            </ScrollPane>

        </VBox>
        <padding>
            <Insets top="20.0" />
        </padding>
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>

    </StackPane>
   <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" />
   </padding>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="630.0" prefWidth="696.0" style="-fx-background-color: #f2f2f2;" stylesheets="@css/main.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shop.management.Controller.SignUp">
    <center>

        <VBox alignment="CENTER" fillWidth="false" spacing="20" style="-fx-background-color: transparent;">

            <ScrollPane fx:id="menuScroll" fitToHeight="true" fitToWidth="true" pannable="true"
                        style="-fx-background-color: white; -fx-background-radius: 10;" vbarPolicy="NEVER"
                        VBox.vgrow="ALWAYS">
                <content>

                    <VBox alignment="CENTER" fillWidth="false" prefHeight="510.0" prefWidth="696.0" spacing="20.0"
                          style="-fx-background-radius: 10;">

                        <HBox alignment="CENTER" spacing="15.0">

                            <VBox spacing="4">
                                <Label text="First Name :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="first_name_f" maxHeight="131.0" minHeight="42.0"
                                           onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="300.0"
                                           promptText="Enter First Name"
                                           style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>

                            <VBox spacing="4">

                                <Label text="Last Name :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="last_name_f" maxHeight="80.0" minHeight="42.0"
                                           onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="300.0"
                                           promptText="Enter Last Name"
                                           style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>
                        </HBox>
                        <HBox alignment="CENTER" spacing="15">

                            <VBox spacing="4">
                                <Label text="Username :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="username_f" maxHeight="375.0" minHeight="42.0"
                                           onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="300.0"
                                           promptText="Enter username"
                                           style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>

                            <VBox spacing="4">
                                <Label text="Phone Number :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="phone_f" layoutX="45.0" layoutY="27.0" maxHeight="80.0"
                                           minHeight="42.0" onKeyReleased="#enterPress" prefHeight="40.0"
                                           prefWidth="300.0" promptText="Enter 10-Digit Phone Number"
                                           style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>

                        </HBox>

                        <HBox alignment="CENTER" spacing="15">

                            <VBox>
                                <Label text="Email  :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="email_f" maxHeight="70.0" minHeight="42.0" onKeyReleased="#enterPress"
                                           prefHeight="40.0" prefWidth="616" promptText="Enter Valid Email"
                                           style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER" spacing="15">

                            <VBox prefHeight="36" spacing="4">
                                <Label text="Gender :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <ComboBox fx:id="gender_comboBox" minHeight="42.0" prefHeight="40.0" prefWidth="300.0"
                                          promptText="Select Gender"
                                          style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>

                            <VBox spacing="4">
                                <Label text="Role :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <ComboBox fx:id="role_combobox" minHeight="42.0" prefHeight="40.0" prefWidth="300.0"
                                          promptText="Select Role"
                                          style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>

                        </HBox>

                        <HBox alignment="CENTER">
                            <VBox spacing="4">
                                <Label text="Full Address :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <TextArea fx:id="full_address_f" maxHeight="80.0" minHeight="60.0"
                                          onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="616.0"
                                          promptText="Enter Full Address"
                                          style="-fx-border-color: gray; -fx-border-radius: 3;">
                                    <padding>
                                        <Insets right="3.0"/>
                                    </padding>
                                </TextArea>
                                <padding>
                                    <Insets right="3.0"/>
                                </padding>

                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER">

                            <VBox spacing="4">
                                <Label text="Password :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <PasswordField fx:id="password_f" minHeight="42.0" onKeyReleased="#enterPress"
                                               prefHeight="40.0" prefWidth="616.0" promptText="Enter Password"
                                               style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER">

                            <VBox spacing="4">
                                <Label text="Conform Password :">
                                    <font>
                                        <Font name="Arial Black" size="12.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="con_password_f" layoutX="46.0" layoutY="27.0" minHeight="42.0"
                                           onKeyReleased="#enterPress" prefHeight="40.0" prefWidth="616.0"
                                           promptText="Enter Conform Password"
                                           style="-fx-border-color: gray; -fx-border-radius: 3;"/>

                            </VBox>
                        </HBox>

                    </VBox>
                </content>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </VBox.margin>

            </ScrollPane>

        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" fillWidth="false"
              style="-fx-alignment: center; -fx-spacing: 15; -fx-background-color: #f2f2f2;"
              BorderPane.alignment="CENTER">
            <children>

                <Button fx:id="submit_bn" alignment="CENTER" lineSpacing="1.0" minHeight="28.0" onAction="#submit_bn"
                        onKeyReleased="#enterPress" prefHeight="28.0" prefWidth="177.0"
                        style="-fx-cursor: hand;-fx-background-color: #5e0cee;" text="SUBMIT" textAlignment="CENTER"
                        textFill="#ffffff">
                    <font>
                        <Font name="Arial Black" size="12.0"/>
                    </font>
                </Button>

                <Button fx:id="already_account" alignment="CENTER" onAction="#already_account_bn" prefHeight="30.0"
                        style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: black;"
                        text="Already have an account? Login Here " textAlignment="CENTER" textFill="white">
                    <font>
                        <Font name="Arial" size="14.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets top="15.0"/>
            </BorderPane.margin>
        </VBox>
    </bottom>
</BorderPane>

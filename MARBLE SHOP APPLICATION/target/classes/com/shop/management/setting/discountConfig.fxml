<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SettingController.DiscountConfig">
   <center>
      <AnchorPane stylesheets="@../css/cartTable.css">
         <VBox alignment="CENTER" prefHeight="450.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="15.0">
            <children>
            
                <HBox alignment="TOP_CENTER" style="-fx-background-color: white;                  -fx-background-radius: 10;">
                    <children>
                        <VBox alignment="TOP_CENTER" fillWidth="false" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER" fillHeight="false" spacing="10.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <VBox alignment="CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_RIGHT">
                                                    <children>
                                                        <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#addDiscountBN" style="-fx-background-color: #008080; -fx-text-fill: WHITE; -fx-cursor: hand;" text="âž• ADD DISCOUNT" HBox.hgrow="ALWAYS">
                                                            <HBox.margin>
                                                                <Insets />
                                                            </HBox.margin>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <TableView fx:id="tableViewDiscount">
                                                    <columns>
                                             <TableColumn fx:id="colDiscountName" editable="false" minWidth="60.0" prefWidth="200.0" sortable="false" text="DISCOUNT NAME" />
                                                        <TableColumn fx:id="colDiscount" editable="false" minWidth="60.0" prefWidth="100.0" sortable="false" text="DISCOUNT %" />
                                                        <TableColumn fx:id="colDiscountDes" editable="false" minWidth="60.0" prefWidth="150.0" sortable="false" text="DESCRIPTION" />
            
            
            
                                                        <TableColumn fx:id="colDisAction" editable="false" minWidth="80.0" prefWidth="120.0" sortable="false" text="ACTION" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" />
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </HBox>
            </children>
         </VBox>
      
      
      </AnchorPane>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Pagination visible="false" fx:id="pagination" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
